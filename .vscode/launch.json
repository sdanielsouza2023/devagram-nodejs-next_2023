{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Next.js with Nodemon",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
      "args": ["--exec", "ts-node", "pages/api/**/*.ts"],
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",  // Esta linha deve estar corretamente aninhada dentro do objeto de configuração.
      "restart": true,
      "stopOnEntry": false,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
